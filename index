<script>
  // Set current date
  document.getElementById('current-date').innerText = new Date().toLocaleDateString();

  function calculate(gmv, proposedRate, localRate, overseaRate, localRatio) {
    const overseaRatio = 100 - localRatio;
    
    const pRate = proposedRate / 100;
    const lRate = localRate / 100;
    const oRate = overseaRate / 100;
    const lRatio = localRatio / 100;
    const oRatio = overseaRatio / 100;

    const dailyMDR = gmv * pRate;
    const annualMDR = dailyMDR * 365;
    
    const competitorDailyMDR = (gmv * lRatio * lRate) + (gmv * oRatio * oRate);
    const competitorAnnualMDR = competitorDailyMDR * 365;
    const savings = competitorAnnualMDR - annualMDR;

    const blendedRate = (lRate * lRatio + oRate * oRatio) * 100;

    return {
      dailyMDR: dailyMDR.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}),
      annualMDR: annualMDR.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}),
      competitorDailyMDR: competitorDailyMDR.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}),
      competitorAnnualMDR: competitorAnnualMDR.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}),
      savings: savings.toLocaleString(undefined, {minimumFractionDigits: 2, maximumFractionDigits: 2}),
      proposedRate: proposedRate.toFixed(2),
      blendedRate: blendedRate.toFixed(2),
      localRate: localRate.toFixed(2),
      overseaRate: overseaRate.toFixed(2),
      localRatio: localRatio.toFixed(2),
      overseaRatio: overseaRatio.toFixed(2)
    };
  }

  function generateResultHTML(title, gmv, result) {
    return `
      <div class="result-card">
        <div class="result-header">
          <span>${title} 比較分析</span>
          <span>每日 GMV: $${Number(gmv).toLocaleString()}</span>
        </div>
        <table class="comparison-table">
          <thead>
            <tr>
              <th>比較項目 Metric</th>
              <th>OpenRice (建議方案)</th>
              <th>現有供應商 (預估)</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>有效費率 Effective Rate</td>
              <td><span class="highlight-val">${result.proposedRate}%</span><br><small style="color:#888">本地及海外卡統一費率</small></td>
              <td><span class="highlight-val">${result.blendedRate}%</span><br><small style="color:#888">本地 ${result.localRate}% / 海外 ${result.overseaRate}%</small></td>
            </tr>
            <tr>
              <td>每日手續費 Daily Fee</td>
              <td>$${result.dailyMDR}</td>
              <td>$${result.competitorDailyMDR}</td>
            </tr>
            <tr>
              <td>年度手續費 Annual Fee</td>
              <td>$${result.annualMDR}</td>
              <td>$${result.competitorAnnualMDR}</td>
            </tr>
            <tr class="savings-row">
              <td>年度節省總額 Annual Savings</td>
              <td colspan="2" style="text-align: center;">$${result.savings} HKD</td>
            </tr>
          </tbody>
        </table>
      </div>
    `;
  }

  function calculateAll() {
    const merchantName = document.getElementById("merchantName").value || "尊貴客戶";
    const gmv = Number(document.getElementById("gmv").value) || 0;
    const overseaRate = Number(document.getElementById("overseaRate").value) || 0;
    const localRatio = Number(document.getElementById("localRatio").value) || 0;

    let html = `<p style="margin-bottom: 20px;"><strong>致 ${merchantName}:</strong><br>感謝您對 OpenRice 支付解決方案的關注。以下是根據您的營業額所做的成本節省分析：</p>`;

    if (document.getElementById("smeCheck").checked) {
      const res = calculate(gmv, Number(document.getElementById("smeRate").value), Number(document.getElementById("localSmeRate").value), overseaRate, localRatio);
      html += generateResultHTML("中小企 (SME) 方案", gmv, res);
    }
    if (document.getElementById("dineinCheck").checked) {
      const res = calculate(gmv, Number(document.getElementById("dineinRate").value), Number(document.getElementById("localDineinRate").value), overseaRate, localRatio);
      html += generateResultHTML("堂食 (Dine-in) 方案", gmv, res);
    }
    if (document.getElementById("fastfoodCheck").checked) {
      const res = calculate(gmv, Number(document.getElementById("fastfoodRate").value), Number(document.getElementById("localFastfoodRate").value), overseaRate, localRatio);
      html += generateResultHTML("快餐 (Fast Food) 方案", gmv, res);
    }

    document.getElementById("results-container").innerHTML = html;
  }

  function exportToPDF() {
    const merchantName = document.getElementById("merchantName").value || "Merchant";
    const element = document.getElementById("quotation-content");
    
    // Temporarily hide inputs and buttons for clean PDF
    const inputs = document.querySelector('.input-section');
    const actions = document.querySelector('.actions');
    inputs.style.display = 'none';
    actions.style.display = 'none';

    const opt = {
      margin: [0.5, 0.5],
      filename: `Quotation_${merchantName}_${new Date().toISOString().slice(0,10)}.pdf`,
      image: { type: 'jpeg', quality: 0.98 },
      html2canvas: { scale: 2, useCORS: true },
      jsPDF: { unit: 'in', format: 'a4', orientation: 'portrait' }
    };

    html2pdf().set(opt).from(element).save().then(() => {
      // Restore visibility
      inputs.style.display = 'block';
      actions.style.display = 'flex';
    });
  }

  // Initial calculation
  calculateAll();
</script>

</body>
</html>
